<!DOCTYPE html>
<html lang="{{@site.lang}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{@site.title}} â€” {{t "Sign in"}}</title>
		<meta name="HandheldFriendly" content="True">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{{>services/google_fonts}}
		<link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
		{{ghost_head}}
	</head>
	<body class="custom-page{{#get "tags" limit="all" filter="visibility:internal"}}{{#foreach tags visibility="internal"}} global-{{slug}}{{/foreach}}{{/get}}">
		{{#post}}
		<div class="custom-wrap">
			{{#if feature_image}}
			<div class="custom-image global-bg-image" style="background-image: url({{feature_image}})"></div>
			{{/if}}
			<div class="custom-container">
				<div class="custom-header">
					<a href="{{@site.url}}">{{>icons/site/arrow_left}}{{t "Back to homepage"}}</a>
				</div>
				<div class="custom-content">
					<form data-members-form="signin">
						<h3>{{title}}</h3>
						<input data-members-email type="email" name="email" placeholder="{{t "Your email address"}}" aria-label="{{t "Your email address"}}" required>
						<span class="input-underline"></span>
						<button class="global-button" type="submit">{{t "Send login link"}}</button>
						<small class="global-question">{{t "Don't have an account yet?"}} <a href="{{@site.url}}/signup/">{{t "Sign up"}}</a></small>
						<small class="alert-loading">{{t "Processing your application"}}</small>
						<small class="alert-error">{{t "There was an error sending the email"}}</small>
					</form>
					<div class="alert-success">
						<h3>{{t "Great!"}}</h3>
						<p>{{t "Check your inbox and click the link to complete signin"}}</p>
						<a href="{{@site.url}}" class="global-button">{{t "Back to homepage"}}</a>
					</div>
				</div>
				{{#if @site.description}}
				<div class="custom-footer">
					<a href="{{@site.url}}">{{@site.title}}.</a>
					<span>{{@site.description}}</span>
				</div>
				{{/if}}
			</div>
		</div>
		{{/post}}
		{{ghost_foot}}
	</body>
</html>