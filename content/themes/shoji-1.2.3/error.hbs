<!DOCTYPE html>
<html lang="{{@site.lang}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{@site.title}} â€” {{statusCode}}</title>
		<meta name="HandheldFriendly" content="True">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{{>services/google_fonts}}
		<link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
	</head>
	<body class="custom-error custom-page{{#get "tags" limit="all" filter="visibility:internal"}}{{#foreach tags visibility="internal"}} global-{{slug}}{{/foreach}}{{/get}}">
		<div class="custom-wrap">
			<div class="custom-container">
				<div class="custom-header">
					<a href="{{@site.url}}">{{>icons/site/arrow_left}}{{t "Back to homepage"}}</a>
				</div>
				<div class="custom-content">
					<div class="error-message">
						<h1>{{statusCode}}</h1>
						<p>{{message}}</p>
						<a href="{{@site.url}}" class="global-button">{{t "Back to homepage"}}</a>
					</div>
				</div>
				{{#if @site.description}}
				<div class="custom-footer">
					<a href="{{@site.url}}">{{@site.title}}.</a>
					<span>{{@site.description}}.</span>
				</div>
				{{/if}}
			</div>
		</div>
	</body>
</html>